<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.listcars.listcarsbybrand.ListCarsByBrandActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="41dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/drawer_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/tv_title"
                style="@style/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="CARS ALBUM"
                android:textColor="#829c02" />

            <ImageView
                android:id="@+id/cv_wallpaper"
                android:layout_width="wrap_content"
                android:layout_height="237dp"
                android:scaleType="fitStart"
                android:layout_below="@id/tv_title"
                android:src="@drawable/mercedeze63amg" />

            <FrameLayout
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="285dp"
                android:layout_below="@id/cv_wallpaper"
                android:layout_marginBottom="400sp" />

        </RelativeLayout>

</android.support.constraint.ConstraintLayout>